  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MDK3K8G2"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
