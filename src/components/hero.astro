---
import Link from "@components/ui/link.astro";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@i18n/utils";
import { Icon } from "astro-icon/components";
import CloudinaryImage from "@components/ui/cloudinaryImage.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const {translatePath} = useTranslatedPath(lang);
// set props of hero component
interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---

<main
  class="grid md:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24"
>
  <div class="py-6 md:order-1 hidden md:block">
    <CloudinaryImage
      src="blog/innovation-amico"
      alt={t("hero.imageAlt")}
      aspectRatio="1"
      sizes="(max-width: 800px) 100vw, 620px"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"
    >
      {title}
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {description}
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        size="lg"
        href={translatePath("notebook", lang)}
        class="flex gap place-items-center"
      >
        <Icon class="text-white w-4 h-4 mr-3" name="bx:book-heart" />
        {t("hero.notebook")}
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/giorgiosaud"
        class="flex gap-1 items-center justify-center"
        target="_blank"
      >
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        {t("hero.githubProfileButton")}
      </Link>
    </div>
  </div>
</main>
