---
import Base from '@templates/Base.astro'

interface Props {
  title: string
  currentPage: 'dashboard' | 'comments' | 'users' | 'notifications'
}

const { title, currentPage } = Astro.props

const navItems = [
  { id: 'dashboard', label: 'Dashboard', href: '/admin' },
  { id: 'notifications', label: 'Notifications', href: '/admin/notifications' },
  { id: 'comments', label: 'Comments', href: '/admin/comments' },
  { id: 'users', label: 'Users', href: '/admin/users' },
]
---

<Base title={`Admin - ${title}`} pathToTranslate="home">
  <div class="admin-container">
    <header class="admin-header">
      <h1>Admin Dashboard</h1>
    </header>

    <nav class="admin-nav">
      {navItems.map(item => (
        <a
          href={item.href}
          class:list={['nav-link', { active: currentPage === item.id }]}
        >
          {item.label}
        </a>
      ))}
    </nav>

    <main class="admin-content">
      <slot />
    </main>
  </div>
</Base>

<style>
  .admin-container {
    max-width: 900px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .admin-header {
    margin-bottom: 1rem;
  }

  .admin-header h1 {
    font-size: 1.5rem;
    margin: 0;
  }

  .admin-nav {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--color-border, #ddd);
    padding-bottom: 0;
  }

  .nav-link {
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: var(--color-muted, #666);
    border-bottom: 2px solid transparent;
    margin-bottom: -1px;
    transition: color 0.2s, border-color 0.2s;
  }

  .nav-link:hover {
    color: var(--color-main);
  }

  .nav-link.active {
    color: var(--color-main);
    border-bottom-color: var(--color-main);
    font-weight: 500;
  }

  .admin-content {
    min-height: 400px;
  }
</style>
