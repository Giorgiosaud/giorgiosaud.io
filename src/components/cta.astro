---
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import Link from "./ui/link.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  class="bg-slate-100 p-8 md:px-20 md:py-10 mt-20 mx-auto max-w-5xl rounded-sm flex flex-col items-center text-center"
>
  <p class="text-slate-800 mt-4 text-lg md:text-xl">
    {t("cta.description")}
  </p>
</div>
