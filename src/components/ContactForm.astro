---
import { getLangFromUrl, useTranslations } from "@i18n/utils"
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang)
---
<form action="">
    <div class="form-control">
    <label for="name">{t("contact.name.placeholder")}</label>
    <input type="text" id="name" name="name" required>
    </div>
    <div class="form-control">
    <label for="email">{t("contact.email.placeholder")}</label>
    <input type="email" id="email" name="email" required>
    </div>
    <div class="form-control">
    <label for="message">{t("contact.message.placeholder")}</label>
    <textarea id="message" name="message" required></textarea>
    </div>
    <button class="button button-primary" type="submit">{t("contact.submit")}</button>
</form>
<style>
    form {
        display: grid;
        grid-template: "name" "email" "message" "button";
        gap: 1rem;
        @media screen and (min-width: 48rem) {
            grid-template-columns: 1fr 1fr;
            grid-template-areas:
                "name email"
                "message message"
                "button button";
            
        }
    }
    .form-control {
        &:has([name="name"]){
            grid-area: name;
        }
        &:has([name="email"]){
            grid-area: email;
        }
        &:has([name="message"]){
            grid-area: message;
        }
    }
    button {
        grid-area: button;
        align-self: center;
        justify-self: center;
    }
    label{
        font-weight: bold;
    }
    input, textarea {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-top: none;
        border-left: none;
        border-right: none;
        transition: border-color 0.3s ease, border-width 0.3s ease;
        &:focus{
            border-color: var(--color-primary);
            outline: none;
            border-width: 2px;
        }
    }
</style>