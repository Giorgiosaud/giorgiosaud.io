---
// OAuth callback handler for popup-based authentication
// Posts success message to opener window and closes itself
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Authentication Complete</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
        background: #f5f5f5;
        color: #333;
      }
      .message {
        text-align: center;
        padding: 2rem;
      }
      .spinner {
        width: 40px;
        height: 40px;
        border: 3px solid #ddd;
        border-top-color: #333;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto 1rem;
      }
      @keyframes spin {
        to { transform: rotate(360deg); }
      }
      .close-btn {
        margin-top: 1rem;
        padding: 0.5rem 1rem;
        background: #333;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: none;
      }
      .close-btn:hover {
        background: #555;
      }
    </style>
  </head>
  <body>
    <div class="message">
      <div class="spinner"></div>
      <p id="status">Authentication successful! Closing...</p>
      <button class="close-btn" id="closeBtn" onclick="window.close()">Close this window</button>
    </div>
    <script is:inline>
      if (window.opener) {
        window.opener.postMessage({ type: 'oauth-success' }, window.location.origin)
        // Try to close, show button if it fails
        setTimeout(() => {
          window.close()
          // If still open after 500ms, show manual close button
          setTimeout(() => {
            document.getElementById('status').textContent = 'You can close this window now.'
            document.getElementById('closeBtn').style.display = 'inline-block'
            document.querySelector('.spinner').style.display = 'none'
          }, 500)
        }, 100)
      } else {
        // Fallback: if no opener (direct navigation), redirect to home
        window.location.href = '/'
      }
    </script>
  </body>
</html>
