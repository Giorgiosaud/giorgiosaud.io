{
  "extends": "astro/tsconfigs/base",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "Bundler",
    "strictNullChecks": true,
    "types": ["astro/client"],
    "paths": {
      "@firebase/*": ["firebase/*"],
      "@lib/*": ["lib/*"],
      "@styles/*": ["styles/*"],
      "@i18n/*": ["i18n/*"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
